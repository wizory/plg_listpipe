<?xml version="1.0" encoding="iso-8859-1"?>
<extension version="1.6.0" type="plugin" group="system" client="site" method="upgrade">
	<name>System - Wizory RelayAPI Content Sync</name>
	<author>Wizory</author>
	<creationDate>October 2016</creationDate>
	<copyright>(C) 2016 Wizory, LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>support@wizory.com</authorEmail>
	<authorUrl>https://github.com/wizory/plg_relayapi</authorUrl>
	<version>1.0.0</version>
	<description>
		<![CDATA[
		Wizory's Joomla implementation of the
		<a href="http://support.autonettv.com/topics/59-web-masters-implementing-the-relayapi-for-web-tools/">RelayAPI</a>
		service for automatic website content creation.<br/><br/>

		To Use:
		<ol>
			<li>choose parent category and user to post as</li>
			<li>enter webtools domain and api key</li>
		 	<li>enable plugin</li>
		 	<li>wait for content to show up :)</li>
		</ol><br/><br/>

		<b>NOTE:</b> This plugin requires Joomla 2.5 or later
		]]>
	</description>
	
	<files>
		<!-- WARNING: renaming this file will cause it not to load (despite the implication you can provide a name) -->
		<filename plugin="wizory_relayapi">wizory_relayapi.php</filename>
		<filename>lib/index.html</filename>
		<filename>lib/RelayApi.php</filename>
		<filename>lib/CmsInterface.php</filename>
		<filename>lib/JoomlaCms.php</filename>
		<filename>lib/WordpressCms.php</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="parent_category_id" type="category" extension="com_content" default="1" label="Category"
                       description="Choose the parent category to create blog sub-categories in."/>

				<field name="user_id" type="user" default="0" label="User"
                       description="Choose the user to create blog posts as."/>

                <field name="webtools_domain" type="text" required="true" label="WebTools Domain"
                	   description="Enter your webtools domain."/>

				<field name="api_key" type="text" required="true" label="API Key"
					   description="Enter your webtools API key."/>

				<field name="update_interval" type="number" required="true" default="24" label="Update Interval (hours)"
					   description="Enter the update frequency."/>
			</fieldset>
		</fields>
	</config>
		
</extension>
